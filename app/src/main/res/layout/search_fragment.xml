<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="45dp"
        android:textSize="45dp"
        android:text="@string/questionSearch"

        android:textColor="@color/blackgreen"
        android:textAlignment="center"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardSearch"
        app:layout_constraintTop_toBottomOf="@+id/textSearch"
        android:iconifiedByDefault="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/blackgreen"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        >
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:queryHint="@string/search"
            android:textColor="@color/lightgreen"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_searcher"
            android:drawableStart="@drawable/ic_searcher"
            android:drawablePadding="10dp"
            android:textSize="20dp"
            />
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>